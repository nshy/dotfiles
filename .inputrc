# remap keys to colemak motions
set keymap vi
l:forward-char
j:backward-char
k:next-history
h:previous-history

# misc better default settings
set completion-ignore-case on
set show-mode-in-prompt on
# yellow * sign for command mode
set vi-cmd-mode-string \1\e[33\m\2*\1\e[00\m\2
set vi-ins-mode-string " "
# fixes default 500ms waiting before command mode after pressing ESC
set keyseq-timeout 50

# use vi mode
set editing-mode vi
